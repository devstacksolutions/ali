<style> 
.custom-collectionList-slider-main{
  background-color: #efeeec;
    padding: 36px 0 67px 0;
}
.custom-collectionList-slider-main img{
    width: 100%
  }
.custom-collectionList-slider-main .collection-details{
  background: #fff;
    text-align: center;
  padding: 15px 5px 12px;
}
.custom-collectionList-slider-main .collection-details .col-title{
  margin: 0;
  font-weight: 600;
    font-size: 14px;
  color: #000;
  
}
.custom-collectionList-slider-main .collection-details .col-des{
  margin: 5px auto auto;
    width: 80%;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    font-weight: 300;
    font-size: 14px;
    line-height: 16px;
  color: rgb(133 122 122);
}
.custom-collectionList-slider-main  .remove-link-style{
    text-decoration: none;
    color: inherit;
  }
.custom-collectionList-slider-main .main-title{
  color: #52543f;
    font-weight: 400;
    font-family: 'Marcellus';
  font-size: 22.5px;
  text-align: center;
  margin: 0 0 20px 0;
}
.custom-collectionList-slider-main .splide__arrow--prev {
    left: 0;
    width: 50px;
    height: 50px;
    border-radius: 0 8px 8px 0;
  background-color: #efeeec;
}
.custom-collectionList-slider-main .splide__arrow--next {
 background-color: #efeeec;
    right: 0;
    width: 50px;
    height: 50px;
    border-radius: 8px 0 0 8px;
}  
  @media(max-width: 768px){
    .custom-collection-slider-main{
      padding: 0 0 0 15px;
    }
  }
</style>
<h1 class="main-title">{{ section.settings.title }}</h1>
<section class="splide" aria-label="Splide Basic HTML Example">
  <div class="splide__track">
    <ul class="splide__list collection-item">
      {% for block in section.blocks %}
       <li class="splide__slide">
         <a class="remove-link-style" href="{{ block.settings.collection.url }}">
       <img src="{{ block.settings.collection.featured_image.src | img_url: "330x" }}" alt="{{ product.featured_img.alt }}" /> 
       <div class="collection-details"> 
       <p class="col-title">{{ block.settings.collection.title }}</p>
        <p class="col-des">{{ block.settings.collection.description }}</p>
       </div>
         </a> 
        </li>
      {% endfor %}
    </ul>
  </div>
</section>
<script>
   var splide = new Splide( '.splide', {
    type   : 'loop',
    perPage: 4,
    perMove: 1,
     gap: '10px',
      pagination: boolean = false,

         breakpoints: {

        1100: {
          perPage: 3,

        },
         680: {
          perPage: 2,
          arrows: boolean = false

        },
           400: {
          perPage: 1,

        }
  }


  } );

  splide.mount();
</script>
{% schema %}
{
"name": "Collection List Slider",
  "class": "custom-collectionList-slider-main",
"settings": [
{
"type": "text",
"id": "title",
"label": "Title",
"default": "Collection List"
}

],
  "blocks": [{
    "type": "collectionlist",
    "name": "collectionlist",
    "settings": [
      {
        "type": "collection",
        "id": "collection",
        "label": "collection"
      }
      
    ]
  }],
"presets": [
{
"name": "Collection List Slider",
"category": "Slider"
}
]
}
{% endschema %}
