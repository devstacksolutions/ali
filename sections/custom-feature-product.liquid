<style>
   .feature-icon-main .parent {
      display: grid;
      grid-template-columns: repeat(4, 1fr);
     text-align: center;
  }
    .feature-icon-main img{
     width: 100px;
      height: 100px;
      border-radius: 50%;
      object-fit: cover;
      object-position: center;
    }
</style>

<section class="feature-icon-main">
  <div class="parent">
    {% for block in section.blocks %}
      <div class="content">
        <img src="{{ block.settings.img | img_url : 'master' }}">
        <p>{{ block.settings.content }}</p>
      </div>
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "custom-feature-with-icon",
  "settings": [],
  "blocks": [{
    "type": "feature-icon",
    "name":"feature-icon",
    "settings": [
      {
      "type": "image_picker",
      "id": "img",
      "label": "icon image"
      },
      {
        "type": "textarea",
        "id":"content",
        "label":"content"
      }
    ]

  }],
  "presets": [
    {
      "name": "custom-feature-with-icon"
    }
  ]
}
{% endschema %}
